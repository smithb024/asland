<UserControl x:Class="Asland.Views.Body.Reports.CalendarItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Asland.Views.Body.Reports"
             xmlns:viewModels="clr-namespace:Asland.ViewModels.Icons"
             xmlns:icon="clr-namespace:Asland.Views.Icons"
             xmlns:converters="clr-namespace:Asland.Common.Converters"
             mc:Ignorable="d" 
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors" xmlns:icons="clr-namespace:Asland.Views.Icons"
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <DataTemplate DataType="{x:Type viewModels:CommuteIconViewModel}">
            <icon:CommuteIcon/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:CyclingIconViewModel}">
            <icon:CyclingIcon/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:HighIntensityIconViewModel}">
            <icon:HighIntensityIcon/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:MediumIntensityIconViewModel}">
            <icon:MediumIntensityIcon/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:LowIntensityIconViewModel}">
            <icon:LowIntensityIcon/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:RailIconViewModel}">
            <icon:RailIcon/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:RunIconViewModel}">
            <icon:RunIcon/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:SeaIconViewModel}">
            <icon:SeaIcon/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:SnapshotIconViewModel}">
            <icon:SnapshotIcon/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:WalkIconViewModel}">
            <icon:WalkIcon/>
        </DataTemplate>

        <converters:IntensityToBrushConverter x:Key="IntensityConverter"/>
    </UserControl.Resources>

    <Grid Background="{Binding Path=Intensity, Converter={StaticResource IntensityConverter}}"
         Height="125">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            Margin="0,5,5,0"
            Text="{Binding Path=Day}"
            Foreground="White"
            FontSize="20"
            FontWeight="Bold"
            HorizontalAlignment="Right"/>

        <TextBlock
            Grid.Row="1"
            Margin="5,0,5,5"
            Text="{Binding Path=Name}"
            Foreground="White"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            TextWrapping="Wrap"/>

        <ContentControl
            Grid.Row="2"
            HorizontalAlignment="Right"
            Width="20"
            Height="20"
            Margin="10"
            Content="{Binding Path=IntensityIcon}" />
        
        <i:Interaction.Triggers>
            <i:EventTrigger EventName="MouseLeftButtonDown">
                <i:InvokeCommandAction Command="{Binding Path=SelectNewEvent}"/>
            </i:EventTrigger>
        </i:Interaction.Triggers>

    </Grid>
</UserControl>
