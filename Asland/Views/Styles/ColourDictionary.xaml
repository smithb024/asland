<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="StdBackgroundColour">#FF202020</Color>
    <SolidColorBrush x:Key="StdBackground" Color="{StaticResource StdBackgroundColour}"/>
    <SolidColorBrush x:Key="StdForeground" Color="White"/>

    <!--Button Colours-->
    <Color x:Key="DisabledButtonBackgroundColour">DarkSeaGreen</Color>

    <Color x:Key="ButtonBackgroundColour">#FF636363</Color>
    <SolidColorBrush x:Key="ButtonBackground" Color="{StaticResource ButtonBackgroundColour}"/>
    <SolidColorBrush x:Key="DisabledButtonBackgroundBrush" Color="{StaticResource DisabledButtonBackgroundColour}"/>
    <SolidColorBrush x:Key="ButtonBackgroundHighlighted" Color="Olive"/>

    <SolidColorBrush x:Key="ButtonControlBorder" Color="Honeydew"/>
    <Color x:Key="ButtonPressedBackground">Gold</Color>
    <Color x:Key="ButtonHoverBackground">Khaki</Color>
    <Color x:Key="HeaderEventSelected">Red</Color>
    <Color x:Key="ButtonIsSelectedColour">DarkGoldenrod</Color>
</ResourceDictionary>